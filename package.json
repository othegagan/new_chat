{
    "name": "wordle-backend",
    "version": "1.0.0",
    "description": "TypeScript Rest API with Express.js, JWT, MongoDB",
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "dev": " env-cmd -f .env.development tsx watch src/index.ts",
        "qa": " env-cmd -f .env.qa tsx watch src/index.ts",
        "prod": " env-cmd -f .env.production tsx watch src/index.ts",

        "ts-check": "tsc --project tsconfig.json",
        "add-build": "git add dist",
        "lint": "biome check . --write --unsafe",

        "build": "rimraf dist && tsc --noEmit false && tsc-alias",
        "start": "node dist/index.js",
        "serve-dev": "env-cmd -f .env.development cross-env NODE_ENV=development tsx -r tsconfig-paths/register src/index.ts",
        "serve-qa": "env-cmd -f .env.qa cross-env NODE_ENV=qa tsx -r tsconfig-paths/register src/index.ts",
        "serve-prod": "env-cmd -f .env.production cross-env NODE_ENV=production tsx -r tsconfig-paths/register src/index.ts"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@internationalized/date": "^3.5.5",
        "@twilio/conversations": "^2.6.0",
        "axios": "^1.7.5",
        "cors": "^2.8.5",
        "date-fns": "^3.6.0",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-async-handler": "^1.2.0",
        "firebase-admin": "^12.4.0",
        "gps2zip": "^2.2.0",
        "moment-timezone": "^0.5.45",
        "morgan": "^1.10.0",
        "node-schedule": "^2.1.1",
        "path": "^0.12.7",
        "puppeteer": "^23.1.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "ts-node-dev": "^2.0.0",
        "twilio": "^5.2.2",
        "tz-lookup": "^6.1.25",
        "winston": "^3.14.2",
        "zipcode-to-timezone": "^0.0.9",
        "zipcodes-nearby": "^0.1.4",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@biomejs/biome": "1.8.3",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.5.0",
        "@types/node-schedule": "^2.1.7",
        "@types/tz-lookup": "^6.1.2",
        "@types/zipcode-to-timezone": "^0.0.2",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "env-cmd": "^10.1.0",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.9",
        "nodemon": "^3.1.4",
        "pre-commit": "^1.2.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.18.0",
        "typescript": "^5.5.4"
    },
    "lint-staged": {
        "*.{js,json,ts}": ["biome check --write --unsafe"]
    }
}
